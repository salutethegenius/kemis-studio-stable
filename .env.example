# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# DALL-E API Configuration (optional, uses OpenAI API key if not set)
DALLE_API_KEY=your_dalle_api_key_here

# Sendy API Configuration
SENDY_API_KEY=your_sendy_api_key_here

# Base URL for image serving (optional, defaults to relative paths)
# Example: https://studio.kemis.net
BASE_URL=

# Flask Environment
# Set to 'production' for production, 'development' for development
FLASK_ENV=production

# Port (automatically set by Railway, defaults to 5000 for local development)
PORT=5000
