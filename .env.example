# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# DALL-E API Configuration (optional, uses OpenAI API key if not set)
DALLE_API_KEY=your_dalle_api_key_here

# Sendy API Configuration
SENDY_API_KEY=your_sendy_api_key_here

# Base URL for image serving (optional, defaults to relative paths)
# Example: https://studio.kemis.net
BASE_URL=

# AWS S3 Configuration (optional, for persistent image storage)
# If not set, images will be saved locally (not recommended for Railway)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=kemisemail
AWS_S3_REGION=us-east-2
AWS_S3_BASE_URL=https://kemisemail.s3.amazonaws.com

# Flask Environment
# Set to 'production' for production, 'development' for development
FLASK_ENV=production

# Port (automatically set by Railway, defaults to 5000 for local development)
PORT=5000
